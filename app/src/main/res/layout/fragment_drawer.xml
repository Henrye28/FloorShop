<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.skymall.widgets.PageTopBar
        android:id="@+id/drawer_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x20"
        android:paddingTop="@dimen/x1"
        android:gravity="center_vertical"
        android:text="@string/drawer_search_title"
        android:textColor="#16172D"
        android:textSize="@dimen/x28"/>

    <com.skymall.fragments.searchDrawer.EditTextClear
        android:id="@+id/drawer_et_search"
        android:layout_width="@dimen/x335"
        android:layout_height="@dimen/x46"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x25"
        android:gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:textColor="#16172D"
        android:textSize="@dimen/x17"/>

    <RelativeLayout
        android:layout_width="@dimen/x335"
        android:layout_height="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x24"
        android:layout_marginTop="@dimen/x23"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/x52"
            android:layout_height="@dimen/x20"
            android:layout_alignParentLeft="true"
            android:text="History"
            android:textSize="@dimen/x15"
            android:textColor="#16172D"/>
        
        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x20"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_history_delete"/>
    </RelativeLayout>

    <com.skymall.fragments.searchDrawer.SearchHistoryView
        android:id="@+id/drawer_history_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x13"/>

</LinearLayout>