<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/drawer_search_block"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/drawer_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/icon_back"/>

        <com.example.henryye.floorshop.fragments.searchDrawer.EditText_Clear
            android:id="@+id/drawer_et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="264"
            android:background="@null"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:imeOptions="actionSearch"
            android:singleLine="true"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/ddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<com.example.henryye.floorshop.fragments.searchDrawer.SearchListView-->
                <!--android:id="@+id/listView"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->
            <!--</com.example.henryye.floorshop.fragments.searchDrawer.SearchListView>-->

            <com.example.henryye.floorshop.fragments.searchDrawer.SearchHistoryView
                android:id="@+id/drawer_history_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/drawer_tv_clear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F6F6F6"
                android:gravity="center"
                android:visibility="invisible"
                android:text="Clear History"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>