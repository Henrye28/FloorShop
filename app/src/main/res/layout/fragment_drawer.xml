<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.skymall.widgets.PageTopBar
        android:id="@+id/drawer_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x20"
        android:paddingTop="@dimen/x1"
        android:gravity="center_vertical"
        android:text="@string/drawer_search_title"
        android:textColor="#16172D"
        android:textSize="@dimen/x28"/>

    <com.skymall.fragments.searchDrawer.EditText_Clear
        android:id="@+id/drawer_et_search"
        android:layout_width="@dimen/x335"
        android:layout_height="@dimen/x46"
        android:gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.skymall.fragments.searchDrawer.SearchHistoryView
            android:id="@+id/drawer_history_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/drawer_tv_clear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F6F6F6"
            android:gravity="center"
            android:visibility="invisible"
            android:text="Clear History"
            />
    </LinearLayout>
</LinearLayout>