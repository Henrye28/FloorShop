<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.skymall.widgets.PageTopBar
            android:id="@+id/mainpage_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Register By Email"
            android:textColor="#FF16172D"
            android:textSize="30sp"/>



        <!--android:background="@drawable/selector_view_block"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="@dimen/largePadding">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="EMAIL"
                app:met_floatingLabelTextColor="#000000"
                app:met_floatingLabelTextSize="20sp"
                app:met_floatingLabel="normal"
                app:met_primaryColor="#EB4F38"
                app:met_errorColor="@color/errorColor"
                app:met_floatingLabelText="EMAIL" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password_txt"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="PASSWORD"
                app:met_floatingLabelTextSize="20sp"
                app:met_floatingLabelTextColor="#000000"
                app:met_primaryColor="#EB4F38"
                app:met_floatingLabel="normal"
                app:met_errorColor="@color/errorColor"
                app:met_floatingLabelText="PASSWORD"/>

        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="register"
            android:background="@drawable/main_btn_style_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>