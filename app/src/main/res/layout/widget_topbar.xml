<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <ImageView
            android:id="@+id/topbar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_search"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/topbar_me_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_share"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/topbar_homepage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="37sp"
            android:textColor="@color/defaultTextColor"
            android:text="FloorShop"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/topbar_community_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/topbar_community_follow"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Follow"
                android:textColor="@color/defaultTextColor"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_verticalline"
                style="@style/line_vertical"/>

            <TextView
                android:id="@+id/topbar_community_discovery"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Discovery"
                android:textColor="@color/defaultTextColor"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/topbar_me_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:text="ME"
            android:textSize="25sp"
            android:textColor="@color/defaultTextColor"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/topbar_comment"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/icon_message"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/topbar_register_next"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/icon_next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:visibility="invisible"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>