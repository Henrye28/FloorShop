<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:contentInsetStart="0.0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/topbar_searching_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_searching_box"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:scaleType="fitXY"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/topbar_searching_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x67"
            android:text="Anything you want"
            android:textColor="#0f16172d"
            android:textSize="@dimen/x17"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/topbar_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x20"
            android:src="@drawable/icon_left"
            android:paddingLeft="@dimen/x16"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/topbar_register_next"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/icon_next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/topbar_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topbar_sign"
            android:textSize="@dimen/x17"
            android:textColor="#FF5024"
            android:paddingRight="@dimen/x20"
            android:paddingTop="@dimen/x10"
            android:layout_alignParentRight="true"
            android:visibility="invisible"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>