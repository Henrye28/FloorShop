<com.example.henryye.floorshop.widgets.DrawerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <com.example.henryye.floorshop.widgets.PageTopBar
            android:id="@+id/pageTopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/show_layout"/>

        <RelativeLayout
            android:id="@+id/show_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/menu_line">
        </RelativeLayout>

        <View
            android:id="@+id/menu_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/menu_bottom"
            android:background="@color/bg_Gray"
            />

        <LinearLayout
            android:id="@+id/menu_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/homepagetab"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/store_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/storetab"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cart_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/carttab"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/myself_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/myselftab"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <include layout="@layout/fragment_drawer"/>
    </FrameLayout>
</com.example.henryye.floorshop.widgets.DrawerView>