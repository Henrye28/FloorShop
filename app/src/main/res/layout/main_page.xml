<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainpage_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.skymall.widgets.PageTopBar
            android:id="@+id/mainpage_topbar"
            android:paddingTop="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/mainpage_show_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/x20"
            android:layout_below="@+id/mainpage_topbar"
            android:layout_above="@+id/mainpage_tab_line">
        </RelativeLayout>

        <View
            android:id="@+id/mainpage_tab_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/mainpage_tab_bottom"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/mainpage_tab_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/mainpage_tab_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:focusable="true"
                android:paddingTop="@dimen/x11">

                <ImageView
                    android:id="@+id/mainpage_tab_home_img"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"/>

                <TextView
                    android:id="@+id/mainpage_tab_home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainpage_tab_home"
                    android:textSize="@dimen/x10"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainpage_tab_discover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:focusable="true"
                android:paddingTop="@dimen/x11">

                <ImageView
                    android:id="@+id/mainpage_tab_discover_img"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"/>

                <TextView
                    android:id="@+id/mainpage_tab_discover_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainpage_tab_discover"
                    android:textSize="@dimen/x10"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainpage_tab_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:focusable="true"
                android:paddingTop="@dimen/x11"
                android:saveEnabled="true">

                <ImageView
                    android:id="@+id/mainpage_tab_profile_img"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"/>

                <TextView
                    android:id="@+id/mainpage_tab_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainpage_tab_profile"
                    android:textSize="@dimen/x10"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.skymall.fragments.searchDrawer.DrawerView
        android:id="@+id/mainpage_drawer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="-65dp"
        android:layout_gravity="start">
    </com.skymall.fragments.searchDrawer.DrawerView>

</android.support.v4.widget.DrawerLayout>