<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.skymall.widgets.PageTopBar
        android:id="@+id/mainpage_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textColor="#FF16172D"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_view_block"
        android:padding="@dimen/largePadding">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            app:met_floatingLabelTextColor="#000000"
            app:met_floatingLabelTextSize="20sp"
            app:met_floatingLabel="normal"
            app:met_primaryColor="#EB4F38"
            app:met_errorColor="@color/errorColor"
            app:met_floatingLabelText="PASSWORD" />

    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        android:text="Register"
        android:background="@drawable/main_btn_style_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>