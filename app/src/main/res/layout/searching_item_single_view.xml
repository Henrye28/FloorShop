<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    app:contentPadding="10dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/searching_list_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/image_loading"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/searching_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingLeft="50dp"
            android:layout_toRightOf="@+id/searching_list_image"
            android:layout_alignTop="@+id/searching_list_image"/>

        <TextView
            android:id="@+id/searching_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searching_list_title"
            android:paddingLeft="50dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/searching_list_image"
            android:layout_alignBottom="@+id/searching_list_image"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>