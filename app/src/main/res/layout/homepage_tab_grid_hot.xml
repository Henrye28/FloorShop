<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/homepage_grid_hot_image"
        android:layout_width="@dimen/x158"
        android:layout_height="@dimen/x158"
        android:scaleType="fitXY"
        fresco:placeholderImage="@drawable/icon_add"/>

    <TextView
        android:id="@+id/homepage_grid_hot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x13"
        android:textColor="#24253D"/>
</LinearLayout>